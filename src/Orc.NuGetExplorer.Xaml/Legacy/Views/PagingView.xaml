<catel:UserControl x:Class="Orc.NuGetExplorer.Views.PagingView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com"
                   xmlns:local="clr-namespace:Orc.NuGetExplorer"
                   x:ClassModifier="internal">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Orc.NuGetExplorer.Xaml;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" Margin="5 5 5 10">
        <Button Content="{catel:LanguageBinding NuGetExplorer_PagingView_Button_Content_Back}" Command="{Binding MoveBack}" Style="{StaticResource HyperLinkButtonStyle}" Margin="0 0 5 0"
                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={catel:BooleanToHidingVisibilityConverter}}"/>

        <Button Content="{catel:LanguageBinding NuGetExplorer_PagingView_Button_Content_Next}" Command="{Binding MoveForward}" Style="{StaticResource HyperLinkButtonStyle}"
                Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={catel:BooleanToHidingVisibilityConverter}}"/>
    </StackPanel>
</catel:UserControl>
