<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.NuGetExplorerVNext</AssemblyName>
    <RootNamespace>Orc.NuGetExplorer</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.NuGetExplorerVNext</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>NuGet explorer library.</Description>
    <PackageTags>orc;nuget;explorer;packages;nupkg;nuspec</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>8A80D189-924A-4C2D-8115-D85B9FA55518</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="3.0.8" />
    <PackageReference Include="MethodTimer.Fody" Version="2.3.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Web.Xdt" Version="2.1.2" />
    <PackageReference Include="Catel.Core" Version="5.10.0" />
    <PackageReference Include="Catel.Fody" Version="3.9.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="4.2.1" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="ModuleInit.Fody" Version="1.9.0" PrivateAssets="all" />
    <PackageReference Include="NuGet.CommandLine.XPlat" Version="4.9.4" />
    <PackageReference Include="NuGet.Commands" Version="4.9.4" />
    <PackageReference Include="NuGet.Credentials" Version="4.9.4" />
    <PackageReference Include="NuGet.Frameworks" Version="4.9.4" />
    <PackageReference Include="NuGet.LibraryModel" Version="4.9.4" />
    <PackageReference Include="NuGet.PackageManagement" Version="4.9.4" />
    <PackageReference Include="NuGet.Packaging.Core" Version="4.9.4" />
    <PackageReference Include="NuGet.ProjectModel" Version="4.9.4" />
    <PackageReference Include="NuGet.Resolver" Version="4.9.4" />
    <PackageReference Include="Obsolete.Fody" Version="4.4.3" PrivateAssets="all" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="4.5.0" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Tools\Interfaces\" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>